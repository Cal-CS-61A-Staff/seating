{% extends 'base.html.j2' %}
{% import 'macros.html.j2' as macros with context %}

{% block title %}{{ exam.display_name }}{% endblock %}

{% block body %}
<h1>Rooms</h1>
<ul>
{% for room in exam.rooms %}
  <li>
    <a href="{{ url_for('room', exam=exam, name=room.name) }}">
      {{ room.display_name }}
    </a>
  </li>
{% endfor %}
</ul>
{% endblock %}
